@model Domain.Entities.Cart

@{
    Layout = null;
}

<div id="cart">
<span class="caption">
    <b> Ваша корзина: </b>
    @Model.Lines.Sum(x => x.Quantity) товар(-ов),
    @Model.ComputeTotalValue().ToString("c")
</span>
    @Html.ActionLink("Моя корзина", "Index", "Cart", new {returnUrl = Request.Url.PathAndQuery}, null)
</div>
